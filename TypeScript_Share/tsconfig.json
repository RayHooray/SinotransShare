{
  "compilerOptions": {
    /* 基本配置 */
    "target": "es5", // es3（默认）、es5、es2015、es2016、es2017、esnext 
    "module": "commonjs", // 指定使用模块化类型
    "lib": [], // 指定要包含在编译种的库文件
    "allowJs": true, // 允许编译 JavaScript 文件
    "checkJs": true,
    "jsx": "preserve",
    "declaration": true,
    "sourceMap": true,
    "outFile": "./",
    "outDir": "./",
    "rootDir": "./",
    "removeComments": true,
    "noEmit": true,
    "importHelpers": true,
    "isolatedModules": true,
    /* 严格的类型检查选项 */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    /* 额外检查 */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* 模块解析 */
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {},
    "rootDirs": [],
    "typeRoots": [],
    "types": [],
    "allowSyntheticDefaultImports": true,
    /* source map 选项 */
    "sourceRoot": "./",
    "mapRoot": "./",
    "inlineSourceMap": true,
    "inlineSources": true,
    /* 其他选项 */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "files": [],
  "include": [],
  "exclude": []
}